{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editando Cadastro:</h3>
<div class="card">
  <div class="card-body">
      <form action="/admin/cadastros/edit" method="POST">
        <input type="hidden" name="id" value="{{cadastro._id}}">
        <div class="form-group">
          <label for="exampleInputEmail1">Nome</label>
          <input type="text" class="form-control" name="nome" aria-describedby="emailHelp" placeholder="Entre com seu nome" value="{{cadastro.nome}}">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Celular/Whatsapp</label>
          <input type="text" class="form-control" name="celular" aria-describedby="emailHelp" placeholder="Enter com seu telefone" value="{{cadastro.celular}}">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Salvar Edição</button>
      </form>
  </div>
</div>