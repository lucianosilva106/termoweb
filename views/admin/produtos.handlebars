
<div class="container text-center">
  <h2>Cadastro de Produtos</h2>
  <hr>
  <div class="text-left">
    <a href="/admin/produtos/add"><button class="btn btn-success mt-2" >Novo Produto</button></a>
  </div>
  
  <table class="table table-info mt-2">
    <thead>
      <tr>
        <th scope="col">Codigo</th>
        <th scope="col">Descricao</th>
        <th scope="col">Preço Padrão</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each produtos}}
        <tr>
          <th scope="row">{{codigo}}</th>
          <th scope="row">{{descricao}}</th>
          <th scope="row">{{precopadrao}}</th>
          <th scope="row"><a href="/admin/produtos/edit/{{_id}}"><button class="btn btn-primary"><i class="glyphicon glyphicon-pencil" style="font-size:16px;"></i> </button></a></th> 
          <th scope="row"><a href="/admin/produtos/delete/{{_id}}"><button class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i> </button></a></th>
        </tr>
      {{else}}


      {{/each}}
    </tbody>
  </table>

