{{/each}}
<h3>Novo Cadastro:</h3>
<div class="card">
  <div class="card-body">
      <form action="/admin/cadastros/nova" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Nome</label>
          <input type="text" class="form-control" name="nome" aria-describedby="emailHelp" placeholder="Entre com seu nome">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Celular/Whatsapp</label>
          <input type="text" class="form-control" name="celular" aria-describedby="emailHelp" placeholder="Enter com seu telefone">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

  </div>
</div>